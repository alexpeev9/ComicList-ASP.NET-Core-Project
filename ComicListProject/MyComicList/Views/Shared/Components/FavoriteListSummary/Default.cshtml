@model FavoriteListViewModel

@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@inject SignInManager<IdentityUser> SignInManager


@if (Model.FavoriteService.FavoriteListItems.Count > 0 && SignInManager.IsSignedIn(User))
{
    <a class="navbar-brand" asp-controller="FavoriteList" asp-action="Index">
        <span id="cart-status"> My List: @Model.FavoriteService.FavoriteListItems.Count </span>
    </a>
}


