@model FavoriteListViewModel

@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@inject SignInManager<IdentityUser> SignInManager


@if (Model.FavoriteService.FavoriteListItems.Count > 0 && SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-controller="FavoriteList">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.FavoriteService.FavoriteListItems.Count
            </span>
        </a>
    </li>
}


